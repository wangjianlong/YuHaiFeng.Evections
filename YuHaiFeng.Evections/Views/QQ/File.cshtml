@{
    Layout = null;
}

<script>
    $(function () {
        $("#file-form").submit(function () {
            var btn = $("#file-form button[type='submit']");
            btn.text("正在上传").attr("disabled", "disabled");
        });
    });
</script>

<div class="page-header">
    <h3 class="text-center">&nbsp;导入文件</h3>
</div>

<form class="form-horizontal" method="post" action="/QQ/SaveFile" id="file-form" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-md-4">&nbsp; 文件：</label>
        <div class="col-md-7">
            <input type="file" name="file" class="form-control" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">&nbsp;分组：</label>
        <div class="col-md-7">
            <input type="text" name="Remark" class="form-control" value="@(DateTime.Now.ToString("s"))" required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>&nbsp; 导入</button>
            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i>&nbsp; 取消</button>
        </div>
    </div>
</form>
